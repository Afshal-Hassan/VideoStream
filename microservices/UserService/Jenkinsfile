pipeline {
    agent any

    environment {
        SONAR_TOKEN = "3aebdfa2305f597ecbf8f85126333461d273673e"
    }

    stages { 
        

        stage('SonarCloud Analysis') {
            steps { 


                // Change directory to the UserService project

                dir('microservices/UserService') {
                    script { 

                        // Run Gradle with Sonar analysis 
                        bat './gradlew sonarqube -Dsonar.projectKey=Afshal-Hassan_VideoStream -Dsonar.organization=afshal1 -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=3aebdfa2305f597ecbf8f85126333461d273673e'
                    }
                }
                
            }
        }
    }


    post {
            success {

                // Send Email
                echo 'Deployment successful!'
                emailext(
                subject: 'Deployment Successful',
                body: 'The Jenkins Pipeline has completed successfully.',
                to: 'afshalhassan7@gmail.com',  
                attachLog: true  
                )
            }
            failure {
                // Handle deployment failures here
                echo 'Deployment failed!'
            }
    }
}